@{
    ViewData["Title"] = "Connexion";
}
@model  EcomApplication.Models.User
<h2>@ViewData["Title"]</h2>

<form method="post">
    <div class="form-group">
        <label for="username">Nom d'utilisateur</label>
        <input type="text" id="username" name="username" class="form-control" placeholder="Entrez votre nom d'utilisateur" required />
    </div>

    <div class="form-group">
        <label for="password">Mot de passe</label>
        <input type="password" id="password" name="password" class="form-control" placeholder="Entrez votre mot de passe" required />
    </div>

    @if (!string.IsNullOrEmpty(ViewData["ErrorMessage"]?.ToString()))
    {
        <div class="alert alert-danger mt-3">
            @ViewData["ErrorMessage"]
        </div>
    }

    <button type="submit" class="btn btn-primary mt-3">Se connecter</button>
</form>

<p class="mt-3">
    Pas encore de compte ? <a href="@Url.Action("Register", "Account")">Inscrivez-vous</a>
</p>
