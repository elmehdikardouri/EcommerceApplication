@model EcomApplication.Models.User

@{
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
    ViewData["Title"] = "Edit User";
}

<div class="form-container">
    <h2 class="form-title">Edit User</h2>
    <form asp-controller="Admin" asp-action="EditUser" method="post" class="form">
        <div class="form-group">
            <label>Username</label>
            <input type="text" name="Username" value="@Model.Username" required class="form-input" />
            <span asp-validation-for="Username" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label>Email</label>
            <input type="email" name="Email" value="@Model.Email" required class="form-input" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label>Password</label>
            <input type="password" name="PasswordHash" value="@Model.PasswordHash" required class="form-input" />
            <span asp-validation-for="PasswordHash" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label>Role</label>
            <select name="Role" class="form-input">
                <option value="Admin">Admin</option>
                <option value="Client">Client</option>
            </select>
            <span asp-validation-for="Role" class="text-danger"></span>
        </div>
        <input type="hidden" name="Id" value="@Model.Id" />
        <div class="form-actions">
            <button type="submit" class="btn btn-primary">Save</button>
        </div>
    </form>
</div>
