@model EcomApplication.Models.Order

@{
    ViewData["Title"] = "Modifier la commande";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<div class="container mt-5">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white text-center">
            <h2 class="mb-0">Modifier la commande</h2>
        </div>
        <div class="card-body">
            <form asp-action="EditOrder" method="post">
                <input type="hidden" asp-for="Id" />

                <!-- Date de la commande -->
                <div class="mb-4">
                    <label asp-for="OrderDate" class="form-label fw-bold">Date de la commande</label>
                    <input asp-for="OrderDate" type="date" class="form-control shadow-sm" />
                    <span asp-validation-for="OrderDate" class="text-danger"></span>
                </div>

                <!-- Montant total -->
                <div class="mb-4">
                    <label asp-for="TotalAmount" class="form-label fw-bold">Montant total</label>
                    <div class="input-group shadow-sm">
                        <input asp-for="TotalAmount" type="number" step="0.01" class="form-control" />
                        <span class="input-group-text">€</span>
                    </div>
                    <span asp-validation-for="TotalAmount" class="text-danger"></span>
                </div>

                <!-- Boutons d'action -->
                <div class="d-flex justify-content-between mt-4">
                    <a asp-action="Orders" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left"></i> Annuler
                    </a>
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-save"></i> Enregistrer
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
